<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff99cc"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biografi Nadin"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginHorizontal="65dp"
            android:typeface="serif"
            android:textColor="@color/black"
            >


        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_margin="3dp"   >

        <ImageView
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:src="@drawable/nadin"
            android:paddingBottom="4dp"
            >

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:text="Nadin Amizah merupakan seorang penyanyi kelahiran Bandung, 28 Mei 2000. Ia mengawali karier dengan mengikuti ajang pencarian bakat di salah satu stasiun TV swasta bertajuk Social Media Sensation pada 2016 lalu. Dalam ajang tersebut, Nadin berhasil menjadi pemenang ketiga"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="35dp"
            android:layout_margin="5dp"
            android:paddingLeft="4dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="213dp"
            android:layout_height="232dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:paddingBottom="20dp"
            android:text="Lagu Bertaut Nadin Amizah lagu ini menceritakan berkenaan seorang anak yang tengah berkeluh kesah (curhat) kepada ibunya. Ia menceritakan tentang segala perihal yang ia alami di di dalam hidupnya. Entah itu tentang kekejaman dunia atau mengenai rasa bersyukur udah punyai ibu seperi dirinya"
            android:textAlignment="gravity"
            android:paddingLeft="10dp"

            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/bertaut">


        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CopyRight by Nadin"
            android:textAlignment="center"
            android:layout_marginStart="125dp"
            android:paddingTop="20dp"

            >


        </TextView>

    </LinearLayout>


</LinearLayout>
